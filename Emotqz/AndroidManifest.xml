<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emotiquiz"
    android:versionCode="3"
    android:versionName="1.1" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="androidUI.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >    
        </activity>
        <activity
            android:name="androidUI.OptionsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_options"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="androidUI.HowToPlayActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_howto"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="androidUI.CreditsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_credits"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="androidUI.CategoriesActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_categories"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="androidUI.StagesActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_stages"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="androidUI.LevelsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_levels"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="androidUI.LevelActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_level"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="androidUI.LoadingActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_loading"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
